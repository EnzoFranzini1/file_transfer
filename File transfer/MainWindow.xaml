<Window x:Class="File_transfer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_transfer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="Transfer" Content="Transfer!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Margin="674,29,0,0" Height="30"/>
        <Button x:Name="Select_file" Content="Select file" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Margin="10,29,0,0" Height="30" Click="Select_file_Click"/>
        <Button x:Name="Destination" Content="Destination" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Margin="125,29,0,0" Height="30" Click="Destination_Click"/>
        <Label x:Name="Current_file" Content="Label" VerticalAlignment="Top" Margin="10,64,10,0" Height="347" BorderThickness="2,0,0,0"/>
        <Label x:Name="Destination_label" Content="Destination" VerticalAlignment="Top" Margin="240,29,125,0" Height="30" BorderThickness="2,0,0,0"/>

    </Grid>
</Window>
